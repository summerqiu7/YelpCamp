<% include ../partials/header %>


<div class="container">
    <h1>Edit the <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>" method="POST">
        <div class="form-group row form-control-lg">
            <input class="form-control" type="text" name="editedName" value="<%= campground.name %>">
        </div>
        <div class="form-group row form-control-lg">
            <input class="form-control" type="text" name="editedImage" value="<%= campground.image %>">
        </div>
        <div class="form-group row form-control-lg">
            <input class="form-control" type="text" name="editedDescription" value="<%= campground.description %>">
        </div>
        <div class="form-group row form-control-lg">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
        <a id="linkBack" class="badge badge-light badge-block" href="/campgrounds/<%= campground._id %>"> Go Back</a>
    </form>
</div>

<% include ../partials/footer %>