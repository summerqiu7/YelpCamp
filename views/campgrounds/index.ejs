<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p id="homeWords">View the popular campgrounds all around the world</p>
            <p>
                <a class="btn btn-primary btn-lg" id="homeBtn" href="/campgrounds/new"> Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row">
         <% campgrounds.forEach(function(campground){ %>
                    <div class = "col-md-4 col-sm-6">
                        <div class = "img-thumbnail text-center">
                            <img src = "<%= campground.image %>" class = "img-fluid">
                            <div class="caption">
                                <h4><%= campground.name %></h4>
                            </div>
                            <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                            </p>
                        </div> 
                    </div>
         <% }); %>
    </div>

 <a id="infoBtn" class="btn btn-outline-primary btn-block" href="/" role="button">Back to Homepage</a>
</div>


<% include ../partials/footer %>
