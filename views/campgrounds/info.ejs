<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-fluid" alt="Responsive image" src = "<%= campground.image %>" >
                <div class="caption-full">
                    <h4 class="float-right">$20/night</h4>
                    <h4><a><%= campground.name%></a></h4>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div>
                <a class="btn btn-outline-success btn-block" href="/campgrounds/<%= campground._id %>/comments/new"> Leave your comments</a>
            </div>
            <hr>
            <div class="card-header">
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                            <%= comment.content %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


 

 

 <% include ../partials/footer %>