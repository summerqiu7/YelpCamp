<% include ../partials/header %>


<div class="container">
        <h1>Add new comments to <%= campground.name %></h1>
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group row form-control-lg">
                <input class="form-control" type="text" name="content" placeholder="comments content">
            </div>
            <div class="form-group row form-control-lg">
                <input class="form-control" type="text" name="author" placeholder="author">
            </div>
            <div class="form-group row form-control-lg">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
            <a id="linkBack" class="badge badge-light badge-block" href="/campgrounds/<%= campground._id %>"> Go Back</a>
        </form> 
</div>

<% include ../partials/footer %>