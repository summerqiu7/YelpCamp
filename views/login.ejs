<h1><%= message %></h1>
<div class="container">
    <h1>Login Page</h1>
    <form action="/login", method="POST">
    <div class="form-group">
        <label for="exampleInputUsername">User Name</label>
        <input type="text" name="username" class="form-control"  placeholder="Enter username">
    </div>
